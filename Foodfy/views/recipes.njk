{% extends "layout.njk" %}

{% block head %}
  <title>Receitas - Foodfy</title>
{% endblock %}

{% block content%}
  <section id="recipe_cards">
    {% for item in items %}
      <div class="card" id="{{item.id}}">
        <img src="{{item.image}}"/>
        <h2>{{item.title}}</h2>
        <p>{{item.author}}</p>
      </div>
    {% endfor %}

  </section>

  <script src="scripts.js"></script>
{% endblock %}