{% extends "layout.njk" %}

{% block head %}
  <title>Treinamentos - Rocketseat</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" 
      rel="stylesheet" />
{% endblock %}

{% block content %}

  <div id="title">
    <h1>Conte√∫dos</h1>
  </div>

  <section class="cards">
    {% for item in items %}
      <div class="card" id="{{item.id}}">
        <div class="card_image-container">
          <img 
          src="https://storage.googleapis.com/golden-wind/bootcamp-launchbase/assets/{{item.id}}.svg"
          alt="Imagem de {{item.name}}" />
        </div>

        <div class="card_content">
          <p>{{item.name}}</p>
        </div>
        <div class="card_info">
          <p>{{item.qtd_modules}}</p>
          <p class="card_price">{{item.price}}</p>
        </div>
      </div>
    {% endfor %}

  </section>

  <div class="modal_overlay">
    <div class="modal">
      <a class="close_modal">
        <i class="material-icons">close</i>
      </a>

      <div class="modal_content">
        <iframe src="" frameborder="0"></iframe>
      </div>
    </div>
  </div>
  

  <script src="scripts.js"></script>
  {% endblock %}