{% extends "layout.njk" %}

{% block content %}
<div class="card">
  <section 
    class="avatar" 
    style="background: url({{teacher.avatar_url}}) no-repeat center center/ cover">
  </section>
  <section class="details">
    <h3>Detalhes</h3>
    <div class="item">
      <div>Nome</div>
      <div>{{teacher.name}}</div>
    </div>

    <div class="item">
      <div>Idade</div>
      <div>{{teacher.age}}</div>
    </div>

    <div class="item">
      <div>Grau de Escolaridade</div>
      <div>{{teacher.schooling}}</div>
    </div>

    <div class="item">
      <div>Tipo de Aula</div>
      <div>{{"Presencial" if teacher.type_class == "P" else "À Distância"}}</div>
    </div>

    <div class="item">
      <div>Atuação</div>
      <div>
        {% for atuation in teacher.atuation %}
        <span>{{atuation}}</span>
        {% endfor %}
      </div>
    </div>

    <div class="item">
      <div>Desde</div>
      <div>{{teacher.created_at}}</div>
    </div>
  </section>
</div>
{% endblock content %}