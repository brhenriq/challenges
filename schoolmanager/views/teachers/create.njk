{% extends "layout.njk" %}

{% block content %}
<form class="card" method="POST" action="/teachers">
  <section 
    class="avatar" 
    style="background: url(https://source.unsplash.com/collection/517198/500x500) no-repeat center center/ cover"></section>
  <section class="details">
    <h3>Novo Professor(a)</h3>

    <div class="item">
      <div>Avatar URL</div>
      <div>
        <input type="url" name="avatar_url" placeholder="http://">
      </div>
    </div>

    <div class="item">
      <div>Nome completo</div>
      <div>
        <input type="text" name="name" placeholder="Nome do Professor(a)">
      </div>
    </div>

    <div class="item">
      <div>Data de Nascimento</div>
      <div>
        <input type="date" name="birth">
      </div>
    </div>

    <div class="item">
      <div>Grau de Escolaridade</div>
      <select name="schooling">
        <option value="Ensino Médio Completo" checked>Ensino Médio Completo</option>
        <option value="Ensino Superior Completo">Ensino Superior Completo</option>
        <option value="Mestrado">Mestrado</option>
        <option value="Doutorado">Doutorado</option>
      </select>
    </div>

    <div class="item">
      <div>Tipo de Aula</div>
      <div>
        <span><input type="radio" name="type_class" value="M" checked>Presencial</span>
        <span><input type="radio" name="type_class" value="F">À distância</span>
      </div>
    </div>

    <div class="item">
      <div>Área de atuação</div>
      <div>
        <input type="text" name="atuation" placeholder="Separe sua área de atuação com vírgula">
      </div>
    </div>

    <button type="submit">Salvar</button>
  </section>
</form>
{% endblock content %}